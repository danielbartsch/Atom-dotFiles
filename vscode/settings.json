{
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }, // Enable per-language
  "bracketPairColorizer.consecutivePairColors": [
    "()",
    "[]",
    "{}",
    "<>",
    [
      "Gold",
      "Orchid",
      "#f87f1c"
    ],
    "Red"
  ],
  "breadcrumbs.enabled": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "editor.accessibilitySupport": "off",
  "editor.autoClosingBrackets": "never",
  "editor.formatOnSave": false,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.minimap.showSlider": "always",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.rulers": [
    120
  ],
  "editor.snippetSuggestions": "top",
  "eslint.autoFixOnSave": true,
  "eslint.options": {
    "rules": {
      "no-debugger": "off"
    }
  },
  "eslint.validate": [
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "javascriptreact",
      "autoFix": true
    },
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    },
    {
      "language": "html",
      "autoFix": true
    }
  ],
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.exclude": {
    "**/.git": false,
    "local": true
  },
  "flow.logLevel": "error",
  "flow.pathToFlow": "${workspaceFolder}/web-app/node_modules/.bin/flow",
  "flow.useBundledFlow": false,
  "flow.useLSP": false,
  "flow.useNPMPackagedFlow": true,
  "git.confirmSync": false,
  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": true,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": false,
    "suppressWelcomeNotice": true
  },
  "gitlens.codeLens.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.keymap": "alternate",
  "gitlens.views.compare.location": "gitlens",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.fileHistory.location": "gitlens",
  "gitlens.views.lineHistory.enabled": true,
  "gitlens.views.lineHistory.location": "gitlens",
  "gitlens.views.repositories.files.layout": "auto",
  "gitlens.views.repositories.location": "gitlens",
  "gitlens.views.search.location": "gitlens",
  // for light theme, comment out if dark theme
  // "indentRainbow.colors": [
  //   "rgba(191,191,239,0.3)",
  //   "rgba(223,191,223,0.3)",
  //   "rgba(191,223,191,0.3)",
  //   "rgba(239,207,207,0.3)"
  // ], 
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": false,
  "keyboard.dispatch": "keyCode",
  // "prettier.ignorePath": ${workspaceFolder}/web-app/.prettierignore
  "prettier.ignorePath": "/home/danielbartsch/projects/insights/web-app/.prettierignore",
  "problems.decorations.enabled": true,
  "window.titleBarStyle": "native",
  "window.zoomLevel": 0,
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tree.indent": 10,
}